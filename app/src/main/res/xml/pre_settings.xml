<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="充电相关"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/charge_service"
            android:persistent="false"
            android:summary="开启后插入充电器充电时会得到鲨鲨酱的守护"
            android:title="鲨鲨酱充电守护"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="@string/charge_service"
            android:key="@string/charge_is_audio"
            android:summary="小心!!!这可能会导致你社死，请谨慎使用"
            android:title="充电守护语音"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="@string/charge_service"
            android:key="@string/charge_screen_on_open"
            android:summary="锁屏状态下亮屏显示动画，有效拯救你的插口"
            android:title="亮屏守护"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="@string/charge_service"
            android:key="@string/charge_keep_show"
            android:summary="也许你想一直看着鲨鲨酱，但请注意耗电和屏幕损耗"
            android:title="守护常亮"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/charge_boot_start"
            android:summary="开机时自动启动鲨鲨酱充电守护服务，请注意授予自启权限"
            android:title="开机自启动"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="true"
            android:dependency="@string/charge_service"
            android:key="@string/charge_click_close"
            android:summary="显示鲨鲨酱时点击即关闭显示"
            android:title="触摸关闭"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/charge_sounds"
        android:title="音频列表"
        app:iconSpaceReserved="false">

    </PreferenceCategory>
</PreferenceScreen>